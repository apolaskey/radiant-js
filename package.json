{
  "name": "radiant-js",
  "productName": "Radiant Editor",
  "version": "0.0.1",
  "description": "Javascript Game Editor",
  "scripts": {
    "start": "npm run-script build && electron ./dist/electron-main.bundle.js",
    "build": "webpack --config ./build-configs/webpack.config.js",
    "test": "xo && ava tests/**/*.test.js"
  },
  "author": "apolaskey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apolaskey/radiant-js.git"
  },
  "keywords": [
    "electron",
    "mithril",
    "game-editor"
  ],
  "xo": {
    "space": 4,
    "envs": ["node", "browser"],
    "globals": ["m"],
    "rules": {
      "no-useless-constructor": "off"
    }
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "dotenv": "^4.0.0",
    "firebase": "^3.9.0",
    "mithril": "^1.0.1",
    "reflect-metadata": "^0.1.10",
    "three": "^0.85.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.28.4",
    "electron": "^1.6.10",
    "eslint": "^3.17.1",
    "eslint-config-xo": "^0.18.2",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.5",
    "spectron": "^3.6.0",
    "webpack": "^2.6.1",
    "xo": "^0.18.2"
  }
}
