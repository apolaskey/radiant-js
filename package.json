{
  "name": "radiant-js",
  "productName": "Radiant Editor",
  "version": "0.0.1",
  "description": "Javascript Game Editor",
  "scripts": {
    "start": "rimraf dist && npm run-script build && run-p start:*",
    "start-dev": "cross-env NODE_ENV=development npm run-script start",
    "start:webpack": "webpack-dev-server --hot --progress --inline --watch --history-api-fallback --config ./webpack.config.js",
    "start:electron": "electron ./dist/electron-main.bundle.js",
    "build": "webpack --config ./webpack.config.js",
    "test": "xo && ava tests/**/*.test.js"
  },
  "author": "apolaskey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/apolaskey/radiant-js.git"
  },
  "keywords": [
    "electron",
    "react",
    "game-editor"
  ],
  "xo": {
    "space": 4,
    "envs": [
      "node",
      "browser"
    ],
    "globals": [
      "m"
    ],
    "rules": {
      "no-useless-constructor": "off"
    }
  },
  "dependencies": {
    "@blueprintjs/core": "^1.18.0",
    "bluebird": "^3.5.0",
    "dotenv": "^4.0.0",
    "electron-debug": "^1.1.0",
    "firebase": "^4.1.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "three": "^0.85.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.5.0",
    "cross-env": "^5.0.1",
    "css-hot-loader": "^1.1.1",
    "css-loader": "^0.28.4",
    "devtron": "^1.4.0",
    "electron": "^1.6.10",
    "eslint": "^3.17.1",
    "eslint-config-xo": "^0.18.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.29.0",
    "node-sass": "^4.5.3",
    "react-hot-loader": "^3.0.0-beta.7",
    "redux-devtools": "^3.4.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.5",
    "spectron": "^3.6.0",
    "style-loader": "^0.18.1",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "xo": "^0.18.2"
  }
}
